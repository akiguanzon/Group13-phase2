<%- include ('partials/header') %>

    <body>

        <div class="container text-center" id="header">
            <div class="row">
                <div class="user">
                    <a href="/login">
                        <div class="user-button">

                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                                class="bi bi-person-circle" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                <path fill-rule="evenodd"
                                    d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                            </svg>
                            <p class="username">User</p>

                        </div>

                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <h1 class="header-title">social-net</h1>
                    <h2 class="header-slogan">Find your everyday reads here!</h2>
                </div>
            </div>
        </div>

        <%- include('partials/navbar') %>


            <div class="create-post">
                Welcome back! <a href="/post/new" class="create-btn"> <svg xmlns="http://www.w3.org/2000/svg" width="50"
                        height="50" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                        <path
                            d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg> Create Post</a>
            </div>
            <section class="featured">
                <div class="featured-post">
                    <div class="date-line">
                        <%= posts[0].formatDate(posts[0].date) %>
                    </div>
                    <a class="cardHeader" href="/post/<%=posts[0]._id%>">
                        <%= posts[0].title %>
                    </a>
                    <div class="author-line">By: <span class="author"><a href="/user/<%= posts[0].username %>">
                                <%= posts[0].username %>
                            </a></span></div>
                    <img src="<%= posts[0].imgSrc %>" alt="" class=" featuredImage">
                </div>
            </section>

            <section class="scroll-case" id="featured-posts">
                <span class="section-title">Featured</span>
                <button class="left-click button-gone" onclick="leftScroll()" id="featured-left">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor"
                        class="bi bi-chevron-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                    </svg></button>

                <div class="scrolling-wrapper" id="scrolling-wrapper">

                    <% for (let post of posts) { %>
                        <div class="my-card">
                            <div class="cardContent">
                                <p class="date-line">
                                    <%= post.formatDate(post.date) %>
                                </p>
                                <div class="cardHeader"><a href="/post/<%=post._id%>">
                                        <%= post.title %>
                                    </a>
                                </div>
                                <img src="<%= post.imgSrc %>" alt="" class="cardImage">
                                <p class="author-line">By: <span class="author"><a href="/user/<%= post.username %>">
                                            <%= post.username %>
                                        </a></span></p>
                                <p class="cardDesc">
                                    <%= post.content %>
                                </p>
                            </div>
                        </div>

                        <% } %>


                </div>

                <button class="right-click" onclick="rightScroll()" id="featured-right"><svg
                        xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor"
                        class="bi bi-chevron-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z" />
                    </svg></button>
            </section>


            <section class="scroll-case" id="latest-posts">
                <button class="left-click button-gone" onclick="leftScroll2()" id="latest-left">
                    <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor"
                        class="bi bi-chevron-left" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
                    </svg></button>
                <span class="section-title">Latest</span>
                <div class="scrolling-wrapper" id="scrolling-wrapper-latest">


                    <% for (let post of latestPosts) { %>
                        <div class="my-card">
                            <div class="cardContent">
                                <p class="date-line">
                                    <%= post.formatDate(post.date) %>
                                </p>
                                <div class="cardHeader"><a href="/post/<%= post._id %>">
                                        <%= post.title %>
                                    </a>
                                </div>
                                <img src="<%= post.imgSrc %>" alt="" class="cardImage">
                                <p class="author-line">By: <span class="author"><a href="/user/<%= post.username %>">
                                            <%= post.username %>
                                        </a></span></p>
                                <p class="cardDesc">
                                    <%= post.content %>
                                </p>
                            </div>
                        </div>

                        <% } %>



                </div>

                <button class="right-click" onclick="rightScroll2()" id="latest-right"><svg
                        xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor"
                        class="bi bi-chevron-right" viewBox="0 0 16 16">
                        <path fill-rule="evenodd"
                            d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z" />
                    </svg></button>

            </section>


            <section class="box-divider">
                <div class="box-divider-text">
                    CATEGORIES
                </div>
            </section>

            <section class="categories">
                <div class="categories-box">
                    <div class="category-circle"><a href="/posts/School">
                            <div class="category-icon">
