<!DOCTYPE html>

<html>

<head>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
        crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/css/user.css">

    <link href='https://fonts.googleapis.com/css?family=Noto Sans' rel='stylesheet'>
    <link href='https://fonts.googleapis.com/css?family=Rancho' rel='stylesheet'>



</head>

<body id="background">
    <img src="<%= currentUser.backgroundUrl %>" alt="" class="backgroundImage">
    <div class="topnav">
        <a></a>
    </div>

    <!-- Navbar Logo -->
    <a href="/" class="NavbarLogo"><img
            src="https://www.nicepng.com/png/full/170-1709508_web-solutions-web-icon-white-png.png"
            id="NavbarLogoImage"></a>

    <!-- Navbar Title -->
    <a href="/" id="font2" class="NavbarTitle">social-net</a>

    <!-- Navbar Slogan -->
    <a href="/" id="font2" class="NavbarSlogan">find your everyday reads
        here!</a>

    <!-- Navbar User Icon -->
    <a href="/" class="NavbarUserIcon"><img src="https://cdn-icons-png.flaticon.com/512/149/149071.png"
            id="NavbarIconImage"></a>

    <!-- Navbar Home Icon -->
    <a href="/" class="NavbarHomeIcon"><img
            src="https://www.pngkey.com/png/full/12-127881_house-blue-clipart-royalty-free-library-free-home.png"
            id="NavbarIconImage"></a>

    <!-- Navbar Delete Icon -->
    <form action="/user/<%= currentUser.username %>?_method=delete" method="post">
        <button class="NavbarLogoutIcon"><img src="https://i.pngimg.me/thumb/f/720/comvecteezy353272.jpg"
                id="NavbarIconImage"></button>
    </form>

    <!-- Navbar Edit Icon -->
    <a href="/user/<%= currentUser.username %>/edit" class="NavbarCreatePostIcon"><img
            src="https://cdn0.iconfinder.com/data/icons/interface-icons-rounded/110/Pencil-512.png"
            id="NavbarIconImage"></a>

    <!-- Navbar Search Button -->
    <a style="position:fixed;right:45px;top:20px"><button class="button topnavbutton">Search</button></a>
    <!-- Navbar Search Bar -->
    <form>
        <input type="text" style="position:fixed;right:155px;top:25px;width:400px">
    </form>
    <!-- Profile Icon -->
    <a href="" class=" ProfileIcon"><img src="<%= currentUser.profilePicUrl %>" id="ProfileIconImage"></a>
    <!-- Profile Username -->
    <a href="../Userpages/UserpageAveryMann.html" id="font2" class="ProfileUsername">
        <%= currentUser.username %>
    </a>


    <div class="userpageframe">
        <a></a>
        <!-- Bio Title -->
        <div id="font2" class="BioTitle">
            <%= currentUser.username %>'s Biography
        </div>
        <!-- Bio Description -->
        <div id="font1" class="BioDesc">
            <%= currentUser.bio %>
        </div>

        <div id="font1" class="SortPostsBy" style="right:450px">View Posts By:</div>
        <div onclick="location.href='/';" id="font1" class="SortPostsBy" style="right:300px">By Category
        </div>
        <div onclick="location.href='/posts/latest';" id="font1" class="SortPostsBy" style="right:160px">By
            Latest</div>
        <div onclick="location.href='/posts/featured';" id="font1" class="SortPostsBy" style="right:40px">
            By
            Feature</div>

        <!-- Photo Gif -->
        <div class="PhotoGif"><img src="<%= currentUser.gifUrl  %>" id="PhotoGifImage">
        </div>

        <!-- "Posts" Title -->
        <div id="font2" class="PostDisplayTitle">
            <%= currentUser.username %>'s Posts
        </div>
        <!-- "Posts Displayer -->

        <div class="UserpagePosts" style="right:50px;top:150px;color:#003C75">

            <% for(post of posts) { %>

                <!-- Post 1 -->
                <div onclick="location.href='/post/<%= post._id %>';" class="UserpagePostsPosts">
                    <div id="font2" class="PostTitle">
                        <%= post.title %>
                    </div>
                    <div class="PostDescription">
                        <%= post.formatDate(post.date) %>
                    </div>
                    <div class="PostDescription">
                        <%= post.category %>
                    </div>
                    <div class="PostPhoto"><img src="<%= post.imgSrc %>" id="PostPhotoImage"></div>

                </div>

                <% } %>
        </div>

    </div>

</body>

</html>